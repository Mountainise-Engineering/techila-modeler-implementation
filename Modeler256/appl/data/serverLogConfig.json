{
    "appenders": {
        "file": {
            "type": "file",
            "filename": "log/backend.log",
            "maxLogSize": 10485760,
            "numBackups": 3
        },
        "console": {
            "type": "logLevelFilter",
            "level": "INFO",
            "appender": "consoleAppender"
        },
        "errorFile": {
            "type": "file",
            "filename": "log/errors.log"
        },
        "errors": {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": "errorFile"
        },
        "consoleAppender": {
            "type": "console"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "console",
                "file",
                "errors"
            ],
            "level": "all"
        }
    }
}